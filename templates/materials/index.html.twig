{# ./src/templates/home/index.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{# Let\'s remove/empty the header #}
{% block content_header_wrapper %} {% endblock content_header_wrapper %}


{% block main %}
    <div class="row text-center justify-content-center mb-2 " id="block-spinner">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    {% include '/materials/show-offcanvas.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <div class="block-materials color-novokuz">
                    <div class="name-block text-center">
                        Новокузнецкая
                    </div>

                    <div class="block-button justify-content-center text-center">
                        <button type="button" class="btn btn-primary m-3 but-add-materials" data-office-type="Новокузнецкая"
                                data-bs-toggle='offcanvas' data-bs-target='#offcanvasExample'
                                aria-controls='offcanvasExample'>
                            Добавить задачу
                        </button>
                        <hr>
                    </div>

                    <div class="list-block justify-content-center" id="block-list-novokuz">

                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="block-materials color-arbat">
                    <div class="name-block text-center">
                        Арбатская
                    </div>
                    <div class="block-button justify-content-center text-center">
                        <button type="button" class="btn btn-primary m-3 but-add-materials" data-office-type="Арбатская"
                                data-bs-toggle='offcanvas' data-bs-target='#offcanvasExample'
                                aria-controls='offcanvasExample'>
                            Добавить задачу
                        </button>
                        <hr>
                    </div>

                    <div class="list-block" id="block-list-arbat">

                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="block-materials color-barikad">
                    <div class="name-block text-center">
                        Баррикадная
                    </div>
                    <div class="block-button justify-content-center text-center">
                        <button type="button" class="btn btn-primary m-3 but-add-materials" data-office-type="Баррикадная"
                                data-bs-toggle='offcanvas' data-bs-target='#offcanvasExample'
                                aria-controls='offcanvasExample'>
                            Добавить задачу
                        </button>
                        <hr>
                    </div>

                    <div class="list-block" id="block-list-barikad">

                    </div>
                </div>
            </div>
        </div>

        <div class="row text-center m-5">
            <h3>Cписок задач в работе</h3>

            <table class="table table-bordered table-hover" id="table-list-materials">
                <thead>
                <tr class="table-danger">
                    <th scope="col">Дата</th>
                    <th scope="col">Задача</th>
                    <th scope="col">Мастерская</th>
                    <th scope="col">Статус</th>
                    <!--th scope="col">Действие</th-->
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.6.1/toastify.min.css"
          integrity="sha512-UiKdzM5DL+I+2YFxK+7TDedVyVm7HMp/bN85NeWMJNYortoll+Nd6PU9ZDrZiaOsdarOyk9egQm6LOJZi36L2g=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.6.1/toastify.min.js"
            integrity="sha512-79j1YQOJuI8mLseq9icSQKT6bLlLtWknKwj1OpJZMdPt2pFBry3vQTt+NZuJw7NSd1pHhZlu0s12Ngqfa371EA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="/admin_assets/jquery.js" type="text/javascript"></script>
    <script src="/admin_assets/materials/js/materials_base.js" type="text/javascript"></script>
    <script src="/admin_assets/materials/js/admin_base.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/admin_assets/materials/css/style.css">
{% endblock %}

{# Let\'s remove/empty the footer #}
{% block content_footer_wrapper %} {% endblock content_footer_wrapper %}